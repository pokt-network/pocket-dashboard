{
  "name": "pocket-dashboard",
  "version": "1.0.0",
  "description": "Pocket dashboard",
  "repository": {
    "url": "https://github.com/pokt-network/pocket-dashboard",
    "type": "git"
  },
  "eslintIgnore": [
    "webpack.config.js",
    "dist/"
  ],
  "author": "Codemera",
  "license": "MIT",
  "scripts": {
    "build": "webpack --watch --mode development --config webpack.config.js",
    "build:prod": "webpack --mode production --config webpack.config.js",
    "start": "pm2-dev --raw dist/server.js",
    "start:prod": "pm2-runtime dist/server.js",
    "test": "mocha test",
    "test:services": "mocha test/services",
    "test:providers": "mocha test/providers",
    "test:models": "mocha test/models",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/transform-runtime",
      "@babel/plugin-syntax-bigint"
    ]
  },
  "mocha": {
    "exit": true,
    "require": "@babel/register",
    "file": [
      "test/setupTests.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "mocha": true,
      "node": true,
      "mongo": true
    },
    "rules": {
      "no-console": "off",
      "comma-spacing": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-unused-vars": "off",
      "eqeqeq": "error",
      "no-alert": "error",
      "curly": "error",
      "brace-style": [
        "error",
        "1tbs"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "function-call-argument-newline": [
        "error",
        "never"
      ],
      "one-var-declaration-per-line": [
        "error",
        "always"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": "*"
        },
        {
          "blankLine": "any",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": [
            "const",
            "let",
            "var"
          ]
        }
      ]
    },
    "plugins": [
      "jsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jsdoc/recommended"
    ],
    "parser": "babel-eslint"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "@pokt-network/pocket-js": "0.6.3-rc",
    "@sendgrid/client": "^7.2.0",
    "@sendgrid/mail": "^7.1.0",
    "aws-sdk": "^2.727.1",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "big-integer": "^1.6.48",
    "bull": "^3.14.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.1",
    "express-jwt": "^6.0.0",
    "googleapis": "^61.0.0",
    "husky": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.4",
    "morgan": "^1.9.1",
    "node-cron": "^2.0.3",
    "numeral": "^2.0.6",
    "nyc": "^15.0.0",
    "pm2": "^4.3.1",
    "query-string": "^6.11.1",
    "stripe": "^8.33.0",
    "strong-cryptor": "^2.2.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/plugin-syntax-bigint": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.6",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "debug": "^2.6.9",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-jsdoc": "^22.1.0",
    "mocha": "^8.1.3",
    "sinon": "^9.0.1",
    "subpackage": "^1.1.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-node-externals": "^1.7.2"
  }
}
